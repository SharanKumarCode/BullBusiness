<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/saloonPricingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="2"

        android:background="@android:color/transparent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" >

        <TextView
            android:id="@+id/saloonPricingLabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:background="@drawable/bg_rounded_solid_small_rounded"
            android:backgroundTint="@android:color/transparent"
            android:layout_weight="1.6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:text="@string/placeholderPricingLabel"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/saloonPricingPriceText"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:gravity="center"
            android:layout_weight="0.4"

            android:background="@drawable/bg_rounded_solid_small_rounded"
            android:text="@string/textHaircutPrice"
            android:textColor="@color/black"
            android:textSize="18sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>