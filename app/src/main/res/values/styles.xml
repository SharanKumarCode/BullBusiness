<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HelperText" parent="TextAppearance.Design.HelperText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="counterText" parent="TextAppearance.Design.HelperText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">30%</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="SCBSwitch" parent="Theme.BullBusiness">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/facebookColor</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/black</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#212224
        </item>
    </style>

</resources>